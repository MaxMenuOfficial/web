<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # ► No reescribas si es archivo/carpeta real
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]



  # 3️⃣ Menú público amigable: /<restaurantId> → /menu.php?id=<restaurantId>
  RewriteRule ^([A-Za-z0-9_-]+)$ /menu.php?id=$1 [QSA,L]

   #    /widget/<restaurantId> → /widget/widget.php?id=<restaurantId>
  RewriteRule ^widget/([A-Za-z0-9_-]+)$ /widget/widget.php?id=$1 [QSA,L]

</IfModule>

<IfModule mod_headers.c>
  <FilesMatch "\.js$">
    Header set Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
</IfModule>