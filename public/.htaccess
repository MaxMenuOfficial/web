<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # —––––––– Servir archivos o carpetas existentes
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # —––––––– Ignorar API y assets estáticos
  RewriteRule ^api/   - [L]
  RewriteRule ^static/ - [L]


  # —––––––– Ruta amigable /restauranteId → menu.php?id=restauranteId
  RewriteRule ^([A-Za-z0-9_-]+)$ menu.php?id=$1 [QSA,L]
</IfModule>
