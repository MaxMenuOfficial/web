# Configuración mínima para cache y performan
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Sirve archivos/carpetas reales
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # API endpoints - el más importante para tu widget
    RewriteRule ^api/menu-version$ api/menu-version.php [QSA,L]
    
    # Widget endpoint
    RewriteRule ^menu-widget$ menu-widget.php [QSA,L]
    
    # URLs amigables para restaurantes (al final)
    RewriteRule ^([A-Za-z0-9_-]+)$ menu.php?id=$1 [QSA,L]
    
</IfModule>