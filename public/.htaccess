RewriteEngine On
RewriteBase /

# Acceso directo a archivos existentes
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Ignorar API y assets
RewriteRule ^api/ - [L]
RewriteRule ^static/ - [L]

# Widget embebido
RewriteRule ^menu-widget/([a-zA-Z0-9_-]+)$ menu-widget.php?id=$1 [QSA,L]

# ✅ Redirigir /restaurantId → menu.php?id=restaurantId
RewriteRule ^([a-zA-Z0-9_-]+)$ menu.php?id=$1 [QSA,L]
