<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # ✅ Sirve archivos o carpetas físicas tal cual
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # ✅ Ruta visible de widget
  RewriteRule ^menu-widget$ menu-widget.php [QSA,L]

  # ✅ Ruta visible para restaurantes tipo /maxmenu
  RewriteRule ^([A-Za-z0-9_-]+)$ menu.php?id=$1 [QSA,L]

  # ✅ Importante para que Cloudflare cachee /api/menu-version?id=...
  RewriteRule ^api/menu-version$ api/menu-version.php [QSA,L]
</IfModule>