RewriteEngine On

# 1. Permitir usar URLs sin .php (solo si existe el .php)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+?)/?$ $1.php [L]

# 2. Si NO existe ni archivo, ni directorio, ni archivo.php â†’ redirigir a home
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php !-f
RewriteRule ^ https://maxmenu.com [R=301,L]


