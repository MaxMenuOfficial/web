RewriteEngine On
RewriteBase /

# âœ… Permitir acceso directo a archivos o carpetas
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# ðŸ”„ Redirigir /menu-widget/restaurantId â†’ menu-widget.php?id=restaurantId
RewriteRule ^menu-widget/([a-zA-Z0-9_-]+)$ menu-widget.php?id=$1 [L,QSA]

# ðŸ”„ Redirigir /restaurantId â†’ menu.php?id=restaurantId
RewriteRule ^([a-zA-Z0-9_-]+)$ menu.php?id=$1 [QSA,L]