<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # —––––––– Servir archivos o carpetas existentes
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]


  # —––––––– Mapear /menu-widget?id=… a menu-widget.php
  RewriteRule ^menu-widget$ menu-widget.php [QSA,L]


  # —––––––– Mapear /api/menu-version → api/menu-version.php
  RewriteRule ^api/menu-version$ api/menu-version.php [QSA,L]


  # —––––––– Ruta amigable /restauranteId → menu.php?id=restauranteId
  RewriteRule ^([A-Za-z0-9_-]+)$ menu.php?id=$1 [QSA,L]
</IfModule>


