<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # ðŸ“¦ Archivos fÃ­sicos primero
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # âœ… API REST: /api/menu-version/<restaurantId>
  RewriteRule ^api/menu-version/([A-Za-z0-9_-]+)$ api/menu-version.php?id=$1 [QSA,L]

  # âœ… Widget versionado: /widget/<id>/v/<version>
  RewriteRule ^widget/([A-Za-z0-9_-]+)/v/([0-9]+)$ widget/widget.php?id=$1&version=$2 [QSA,L]

  # âœ… Widget sin versiÃ³n: /widget/<id>
  RewriteRule ^widget/([A-Za-z0-9_-]+)$ widget/widget.php?id=$1 [QSA,L]

  # âœ… MenÃº amigable pÃºblico: /<restaurantId>
  RewriteRule ^([A-Za-z0-9_-]+)$ menu/menu.php?id=$1 [QSA,L]

</IfModule>