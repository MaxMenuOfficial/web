<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # 1️⃣ Archivos físicos primero
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 2️⃣ JS loader cacheado 1 año:
  #    /js/widget/<restaurantId>.js → /js/widget.js?id=<restaurantId>
  RewriteRule ^js/widget/([A-Za-z0-9_-]+)\.js$ /js/widget.js?id=$1 [QSA,L]

  # 3️⃣ HTML puro del widget:
  #    /widget/<restaurantId> → /widget/widget.php?id=<restaurantId>
  RewriteRule ^widget/([A-Za-z0-9_-]+)$ /widget/widget.php?id=$1 [QSA,L]

  # 4️⃣ Menú público “amigable”:
  #    /<restaurantId> → /menu.php?id=<restaurantId>
  RewriteRule ^([A-Za-z0-9_-]+)$ /menu.php?id=$1 [QSA,L]
</IfModule>
