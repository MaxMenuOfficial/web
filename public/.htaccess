<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # ðŸ§± Archivos fÃ­sicos primero
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # âœ… API limpia: /api/menu-version/<restaurantId>
  RewriteRule ^api/menu-version/([A-Za-z0-9_-]+)$ api/menu-version.php?restaurant_id=$1 [QSA,L]

  # âœ… Widget versionado: /widget/<id>/v/<version>
  RewriteRule ^widget/([A-Za-z0-9_-]+)/v/([0-9]+)$ widget.php?restaurant_id=$1&version=$2 [QSA,L]

  # âœ… Widget sin versiÃ³n
  RewriteRule ^widget/([A-Za-z0-9_-]+)$ widget.php?restaurant_id=$1 [QSA,L]

  # âœ… MenÃº pÃºblico: /<id>
  RewriteRule ^([A-Za-z0-9_-]+)$ menu.php?restaurant_id=$1 [QSA,L]
</IfModule>