RewriteEngine On
RewriteBase /

# Excluir archivos reales y carpetas reales
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Captura URLs tipo /restaurante123 y redirige a menu.php?id=restaurante123
RewriteRule ^([a-zA-Z0-9_-]+)$ menu.php?id=$1 [QSA,L]

