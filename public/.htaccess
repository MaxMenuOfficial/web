RRewriteEngine On
RewriteBase /

# âœ… Permitir acceso directo a archivos existentes o carpetas
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# âœ… No redirigir si es una peticiÃ³n a /api/
RewriteCond %{REQUEST_URI} ^/api/
