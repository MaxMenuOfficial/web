<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # üö´ 1. Si accede a la ra√≠z, redirige a maxmenu.com
  RewriteCond %{REQUEST_URI} ^/?$
  RewriteRule ^$ https://maxmenu.com [R=301,L]

  # üîÅ 2. Si la URL contiene may√∫sculas, redirige a lowercase.php
  RewriteCond %{REQUEST_URI} [A-Z]
  RewriteRule ^(.*)$ redirect-to-lowercase.php [L]

  # ‚ñ∫ 3. No reescribas si es archivo o carpeta real
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 4Ô∏è‚É£ Men√∫ p√∫blico amigable: /<restaurantId> ‚Üí /menu.php?id=<restaurantId>
  RewriteRule ^([A-Za-z0-9_.-]+)$ /menu.php?id=$1 [QSA,L]

  # 5Ô∏è‚É£ Widget: /widget/<restaurantId>/<version> ‚Üí widget.php?id=<restaurantId>&version=<version>
  # ‚ö†Ô∏è Esto NO se toca, queda exactamente como lo ten√≠as
  RewriteRule ^widget/([A-Za-z0-9_-]+)/([0-9]+)$ /widget/widget.php?id=$1&version=$2 [QSA,L]
</IfModule>

<IfModule mod_headers.c>
  <FilesMatch "\.js$">
    Header set Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
</IfModule>