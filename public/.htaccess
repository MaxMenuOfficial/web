<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # âœ… Servir archivos fÃ­sicos o carpetas sin reescritura
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # âœ… Ruta visible: /menu-widget?id=... â†’ menu-widget.php
  RewriteRule ^menu-widget$ menu-widget.php [QSA,L]

  # âœ… Ruta amigable: /nombre_restaurante â†’ menu.php?id=nombre_restaurante
  RewriteRule ^([A-Za-z0-9_-]+)$ menu.php?id=$1 [QSA,L]

  # âœ… Para que Cloudflare la entienda como real y enrutable
  # ðŸ”¥ Necesario para que Cloudflare pueda regenerar el JSON version
  RewriteRule ^api/menu-version$ api/menu-version.php [QSA,L]
</IfModule>

