<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # ✅ Servir archivos físicos o carpetas sin reescritura
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # ✅ Ruta visible: /menu-widget?id=... → menu-widget.php
  RewriteRule ^menu-widget$ menu-widget.php [QSA,L]

  # ✅ Ruta amigable: /nombre_restaurante → menu.php?id=nombre_restaurante
  RewriteRule ^([A-Za-z0-9_-]+)$ menu.php?id=$1 [QSA,L]
</IfModule>

