RewriteEngine On
RewriteBase /

# ✅ Permitir acceso directo a archivos existentes o carpetas
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# ✅ Redirigir /menu-widget/restaurantId → menu-widget.php?id=restaurantId
RewriteRule ^menu-widget/([a-zA-Z0-9_-]+)$ menu-widget.php?id=$1 [L,QSA]

# ✅ Redirigir /restaurantId → menu.php?id=restaurantId
RewriteRule ^([a-zA-Z0-9_-]+)$ menu.php?id=$1 [QSA,L]

