<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Sirve archivos/carpetas reales (CSS, JS, imágenes, etc.)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # /api/menu-version → api/menu-version.php
  RewriteRule ^api/menu-version$ api/menu-version.php [QSA,L]

  # /widget/<restaurantId> → widget/widget.php?id=...
  RewriteRule ^widget/([A-Za-z0-9_-]+)$ widget/widget.php?id=$1 [QSA,L]

  # /<restaurantId> → menu.php?id=...
  RewriteRule ^([A-Za-z0-9_-]+)$ menu.php?id=$1 [QSA,L]
</IfModule>
