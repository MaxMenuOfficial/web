<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # üß± Archivos f√≠sicos primero
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # ‚úÖ API limpia: /api/menu-version/<restaurantId>
  RewriteRule ^api/menu-version/([A-Za-z0-9_-]+)$ api/menu-version.php?id=$1 [QSA,L]

  # Widget versionado: /widget/<id>/v/<version>
  RewriteRule ^widget/([A-Za-z0-9_-]+)/v/([0-9]+)$ widget.php?id=$1&version=$2 [QSA,L]

  # Widget sin versi√≥n (legacy fallback)
  RewriteRule ^widget/([A-Za-z0-9_-]+)$ widget.php?id=$1 [QSA,L]

  # ‚úÖ Men√∫ p√∫blico: /<id>
  RewriteRule ^([A-Za-z0-9_-]+)$ menu.php?id=$1 [QSA,L]
</IfModule>