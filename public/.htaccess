<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # üîÅ Redirige a versi√≥n en min√∫sculas si contiene may√∫sculas
  RewriteCond %{REQUEST_URI} [A-Z]
  RewriteRule ^(.*)$ https://menu.maxmenu.com/${lc:$1} [R=301,L]

  # üö´ Si accede al dominio ra√≠z, redirige a maxmenu.com
  RewriteCond %{REQUEST_URI} ^/$
  RewriteRule ^.*$ https://maxmenu.com [R=302,L]
  
  # ‚ñ∫ No reescribas si es archivo/carpeta real
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]



  # 3Ô∏è‚É£ Men√∫ p√∫blico amigable: /<restaurantId> ‚Üí /menu.php?id=<restaurantId>
  RewriteRule ^([A-Za-z0-9_.-]+)$ /menu.php?id=$1 [QSA,L]

  # Reescribe /widget/<restaurantId>/<version> a widget.php?id=<restaurantId>&version=<version>
  RewriteRule ^widget/([A-Za-z0-9_-]+)/([0-9]+)$ /widget/widget.php?id=$1&version=$2 [QSA,L]

</IfModule>

<IfModule mod_headers.c>
  <FilesMatch "\.js$">
    Header set Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate, max-age=0"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>
</IfModule>



