# ğŸ§± Imagen base optimizada
FROM europe-west1-docker.pkg.dev/maxmenu-447510/maxmenu-php-a/php82-grpc-imagick:latest

ENV COMPOSER_ALLOW_SUPERUSER=1

WORKDIR /var/www/html

# ğŸ” Copiar primero los archivos de Composer
COPY composer.json composer.lock ./
RUN echo "ğŸ“¦ Instalando dependencias con Composer..." && \
    composer install --no-dev --optimize-autoloader --no-interaction --no-progress || \
    (echo "âŒ Composer fallÃ³" && exit 1)

# âœ… Copiar todos los archivos del proyecto
COPY . /var/www/html

# âœ… Copiar .env SOLO EN LOCAL
# âš ï¸ Este archivo debe estar en tu `.dockerignore` en producciÃ³n
COPY .env /var/www/html/.env

# âš™ï¸ PHP + Apache + supervisord
COPY docker/php.ini /usr/local/etc/php/php.ini
COPY docker/supervisord.conf /etc/supervisor/conf.d/supervisord.conf
COPY docker/entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# ğŸ› ï¸ Configurar Apache y permitir .htaccess (para RewriteRules limpias tipo /restaurante)
RUN a2enmod rewrite && \
    sed -i 's|DocumentRoot /var/www/html|DocumentRoot /var/www/html/public|g' /etc/apache2/sites-available/000-default.conf && \
    echo '<Directory /var/www/html/public>\nOptions Indexes FollowSymLinks\nAllowOverride All\nRequire all granted\n</Directory>' >> /etc/apache2/apache2.conf

# ğŸ“‚ Crear logs
RUN mkdir -p /var/www/html/logs/apache2 /var/log/supervisord && \
    touch /var/www/html/logs/apache2/access.log /var/www/html/logs/apache2/error.log && \
    chmod -R 777 /var/www/html/logs /var/log/supervisord

# ğŸŒ Exponer puerto
EXPOSE 8080

# ğŸ Iniciar Apache + supervisord
CMD ["/entrypoint.sh"]